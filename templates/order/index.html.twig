{% extends 'base.html.twig' %}

{% block title %} Valider ma commande{% endblock %}

{% block content%}
    <h2>Je passe ma commande</h2>
    <p>Choississez vos préférences avant de passer votre commande </p>
    <hr>
    <div class="row">
        <div class="col-md-6">
            {% set formHtml %}
                {{ form(form) }}
            {% endset %}
            {{ formHtml|replace({'[br]' : '<br/>'})|raw }}

            <b>Choisir mon transporteur </b>
        </div>
        <div class="col-md-6">
            <b>Récapitulatif de ma commande</b><br/>
            <b>Boutton pour payer </b>
        </div>
    </div>
{% endblock %}
